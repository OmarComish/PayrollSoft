@model IEnumerable<PayrollSoft.Models.TaxationThreshold>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Tax_Ref_Code
        </th>
        <th>
            MinimumAmount
        </th>
        <th>
            MaximumAmount
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tax_Ref_Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinimumAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaximumAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ThresholdID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ThresholdID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ThresholdID })
        </td>
    </tr>
}

</table>
