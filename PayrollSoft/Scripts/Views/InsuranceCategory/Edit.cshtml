@model PayrollSoft.Models.InsuranceCategory

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>InsuranceCategory</legend>

        @Html.HiddenFor(model => model.CategoryID)

        <div class="editor-label">
            @Html.LabelFor(model => model.InsuranceCode, "Insurance")
        </div>
        <div class="editor-field">
            @Html.DropDownList("InsuranceCode", String.Empty)
            @Html.ValidationMessageFor(model => model.InsuranceCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonthlyRate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonthlyRate)
            @Html.ValidationMessageFor(model => model.MonthlyRate)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
