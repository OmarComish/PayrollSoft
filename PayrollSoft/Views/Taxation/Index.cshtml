@model IEnumerable<PayrollSoft.Models.Taxation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Description
        </th>
        <th>
            Number_of_Thresholds
        </th>
        <th>
            DateCreated
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number_of_Thresholds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Tax_Ref_Code }) |
            @Html.ActionLink("Details", "Details", new { id=item.Tax_Ref_Code }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Tax_Ref_Code })
        </td>
    </tr>
}

</table>
