@model PayrollSoft.Models.User


<div class="container" id="login-content">

      <div class="modal" id="popUpWindow">
         <div class="modal-dialog">
           <div class="modal-content">

 @using(Html.BeginForm("Login","Home",FormMethod.Post))
 {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)

      if(@ViewBag.Message != null)
      {

          <div style="border:1px solid red;">
          @ViewBag.Message
          </div> 

      }
            <!-- header -->
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
               <h3 class="modal-title">Signin</h3>
  </div>
            <!-- body -->
  <div class="modal-header">
    <form role="form" id="login-form">
      <div class="form-group">
        <div id="username">@Html.TextBoxFor(a => a.UserName, new { @class = "form-control", placeholder ="User name" })</div>
        <div class="validation-msge">@Html.ValidationMessageFor(a => a.UserName,"", new { @class = "text-danger" })</div>
        <div style="margin-top: 5px;"></div>
         <!-- <input type="password" id="password" class="form-control" placeholder="Password" /> -->
        <div id="username">@Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder ="Password" })</div>
        <div class="validation-msge">@Html.ValidationMessageFor(a => a.Password,"", new { @class = "text-danger" })</div>
        <div style="margin-top: 5px;"></div>
        <div id="module" class="form-group">
          @Html.DropDownList("SignedInTo", null, new {@class = "form-control", placeholder ="Signin to..."})
           <!--<select id="signinto" class="form-control">
              <option value="0" selected>Signin to...</option>
              <option value="1">ESS</option>
              <option value="2">Payroll</option>
           <select class="form-control" id="SignedInTo"></select>-->
        </div>

    </form>
  </div>
            <!-- footer -->
<div class="modal-footer">
   <button class="btn btn-primary btn-block" type="submit" id="loginBtn" >Log In</button>
</div>
}   
   </div>
  </div>
 </div>
</div>
<div id="messageNotification" style="overflow:hidden;">
